<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp"
            android:orientation="vertical">

            <TextView
                style="@style/carcy_info_title"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="业务信息" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    style="@style/carcy_info_jscs_left"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="业务类型" />

                <TextView
                    style="@style/carcy_info_jscs_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:text="注销登记" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    style="@style/carcy_info_jscs_left"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="业务原因" />


                <Spinner
                    android:id="@+id/sp_zx_ywyy"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/sp_bg"
                    android:spinnerMode="dialog" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_zrd"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="gone">

                <TextView
                    style="@style/carcy_info_jscs_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="转入地" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:spinnerMode="dialog" />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:spinnerMode="dialog" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_xhphm"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="gone">

                <TextView
                    style="@style/carcy_info_jscs_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="新号牌号码" />

                <EditText
                    style="@style/carcy_info_jscs_center"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg" />
            </LinearLayout>


            <TextView
                style="@style/carcy_info_title"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="代理人信息" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    style="@style/carcy_info_jscs_left"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="身份证明名称" />

                <Spinner
                    android:id="@+id/sp_dlr_sfz"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/sp_bg"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    style="@style/carcy_info_jscs_left"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="身份证明号码" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/edit_text_bg">

                    <EditText
                        android:id="@+id/ed_dlr_sfz"
                        style="@style/carcy_info_jscs_left"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"

                        android:digits="@string/number_and_letter" />

                    <ImageView
                        android:id="@+id/iv_dlr_scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/iv_sfz"
                        android:background="@drawable/scan_bule_icon" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    style="@style/carcy_info_jscs_left"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="姓名/名称" />

                <EditText
                    android:id="@+id/ed_dlr_xm"
                    style="@style/carcy_info_jscs_left"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    style="@style/carcy_info_jscs_left"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="联系电话" />

                <EditText
                    android:id="@+id/et_dlr_lxdh"
                    style="@style/carcy_info_jscs_left"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:maxLength="11"
                    android:digits="@string/number_telephone"
                    android:background="@drawable/edit_text_bg" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <include layout="@layout/bottom_button"/>
</LinearLayout>