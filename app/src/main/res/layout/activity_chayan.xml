<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="车身颜色:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/sp_csys_a"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/sp_bg"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/sp_csys_b"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/sp_bg"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/sp_csys_c"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/sp_bg"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_scsj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/my_view1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_scckg"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="实测长宽高(mm):"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_c"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_bg"
                        android:digits="@string/number_text"
                        android:maxLength="6"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_k"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_bg"
                        android:digits="@string/number_text"
                        android:maxLength="6"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_g"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_bg"
                        android:digits="@string/number_text"
                        android:maxLength="6"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/my_view1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_zczl"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="实测整车质量(KG)："
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_zczl"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_bg"
                        android:digits="@string/number_text"
                        android:maxLength="6"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/my_view1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_sczgss"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="实测最高时速(km/h)："
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_zgss"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_bg"
                        android:digits="@string/number_text"
                        android:maxLength="6"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/my_view1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="前后轮中心距(mm)："
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_qhlzxj"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_bg"
                        android:digits="@string/number_text"
                        android:maxLength="6"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/my_view1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="车辆制造商："
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_zzc"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:maxLength="32"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/my_view1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="脚踏行驶："
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/rb_jtxs_ok"
                    style="@style/cy_et_style"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/cy_check_button"
                    android:button="@null"
                    android:text="有"
                    android:textSize="14sp" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp" />

                <CheckBox
                    android:id="@+id/rb_jtxs_no"
                    style="@style/cy_et_style"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cy_check_button"
                    android:button="@null"
                    android:text="无"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/my_view1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_dpxs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="带牌销售："
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/rb_dpxs_ok"
                    style="@style/cy_et_style"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/cy_check_button"
                    android:button="@null"
                    android:text="是"
                    android:textSize="14sp" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp" />

                <CheckBox
                    android:id="@+id/rb_dpxs_no"
                    style="@style/cy_et_style"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cy_check_button"
                    android:button="@null"
                    android:text="否"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/my_view1" />

        <LinearLayout
            android:id="@+id/ll_cphm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="车牌号码："
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/et_cphm"
                    style="@style/cy_et_style1"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:hint="请点击获取"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/btn_hqhphm"
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/btn_ewm_state_update"
                    android:text="获取号牌"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1" />

        <include layout="@layout/bottom_button" />
    </LinearLayout>
</LinearLayout>