<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="*"-->
                <!--android:textColor="@color/red"-->
                <!--android:textSize="20sp" />-->

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="业务类型:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/sp_cy"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/sp_bg"
                android:layout_gravity="center_vertical"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ywyy"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="*"-->
                <!--android:textColor="@color/red"-->
                <!--android:textSize="20sp" />-->

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="业务原因:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/sp_ywyy"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/sp_bg"
                android:layout_gravity="center_vertical"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_zcbm"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="*"-->
                <!--android:textColor="@color/red"-->
                <!--android:textSize="20sp" />-->

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="整车编码:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_cy_zcbm"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入整车编码"
                android:gravity="left|center_vertical"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:digits="@string/number_and_letter"
                android:textColorHint="@color/theme_color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/scan_bule_icon" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_cphm"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="*"-->
                <!--android:textColor="@color/red"-->
                <!--android:textSize="20sp" />-->

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="号牌号码:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_cy_cphm"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/hphm_search"
                android:hint="请输入号牌号码"
                android:padding="5dp"
                android:text="新"
                android:gravity="left|center_vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/theme_color"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_clpp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="*"-->
                <!--android:textColor="@color/red"-->
                <!--android:textSize="20sp" />-->

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="车辆品牌:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_cy_clpp"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/hphm_search"
                android:hint="请输入车辆品牌"
                android:padding="5dp"
                android:text=""
                android:gravity="left|center_vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/theme_color"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_cpxh"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="*"-->
                <!--android:textColor="@color/red"-->
                <!--android:textSize="20sp" />-->

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="产品型号:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_cy_cpxh"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/hphm_search"
                android:hint="请输入产品型号"
                android:padding="5dp"
                android:text=""
                android:gravity="left|center_vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/theme_color"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/bottom_button"/>
</LinearLayout>