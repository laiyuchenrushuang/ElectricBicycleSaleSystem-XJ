<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/archive_file_search_style"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <RelativeLayout
                android:id="@+id/ll_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/back_icon" />
            </RelativeLayout>

            <EditText
                android:id="@+id/searchview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:hint="查询车辆号牌或整车编码"
                />

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingBottom="3dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_btn_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/search_icon" />
            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:id="@+id/ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:divider="@drawable/item_diliver"
                android:orientation="vertical"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/pay_info"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="所有人" />

                    <TextView
                        android:id="@+id/tv_fh_syr"
                        style="@style/pay_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XX" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/pay_info"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="整车编码" />

                    <TextView
                        android:id="@+id/tv_fh_zcbm"
                        style="@style/pay_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        android:text="XX" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/pay_info"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="号牌号码" />

                    <TextView
                        android:id="@+id/tv_fh_cphm"
                        style="@style/pay_info"
                        android:layout_width="wrap_content"
                        android:textIsSelectable="true"
                        android:layout_height="wrap_content"
                        android:text="XX" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/pay_info"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="业务类型" />

                    <TextView
                        android:id="@+id/tv_fh_ywlx"
                        style="@style/pay_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XX" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/pay_info"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="业务人员" />

                    <TextView
                        android:id="@+id/tv_fh_ywry"
                        style="@style/pay_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XX" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/pay_info"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="受理时间" />

                    <TextView
                        android:id="@+id/tv_fh_slsj"
                        style="@style/pay_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XX" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/pay_info"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="复核状态" />

                    <TextView
                        android:id="@+id/tv_fh_fhzt"
                        style="@style/pay_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XX" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_yy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/pay_info"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="原因" />

                    <TextView
                        android:id="@+id/tv_fh_yy"
                        style="@style/pay_info"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:ellipsize="marquee"
                        android:scrollbars="vertical"
                        android:text="XX" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fhr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/pay_info"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="复核人" />

                    <TextView
                        android:id="@+id/tv_fh_fhr"
                        style="@style/pay_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XX" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fhsj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/pay_info"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="复核时间" />

                    <TextView
                        android:id="@+id/tv_fh_fhsj"
                        style="@style/pay_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XX" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fhyj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/pay_info"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="复核意见" />

                    <TextView
                        android:id="@+id/tv_fh_fhyj"
                        style="@style/pay_info"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:ellipsize="marquee"
                        android:scrollbars="vertical"
                        android:text="XX" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>