<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:divider="@drawable/item_diliver"
            android:showDividers="middle"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/pay_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="所有人" />

                <TextView
                    android:id="@+id/tv_fh_syr"
                    style="@style/pay_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XX" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/pay_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="整车编码" />

                <TextView
                    android:id="@+id/tv_fh_zcbm"
                    style="@style/pay_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XX" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/pay_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="车牌号码" />

                <TextView
                    android:id="@+id/tv_fh_cphm"
                    style="@style/pay_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XX" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/pay_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="业务类型" />

                <TextView
                    android:id="@+id/tv_fh_ywlx"
                    style="@style/pay_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XX" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/pay_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="业务人员" />

                <TextView
                    android:id="@+id/tv_fh_ywry"
                    style="@style/pay_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XX" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/pay_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="受理时间" />

                <TextView
                    android:id="@+id/tv_fh_slsj"
                    style="@style/pay_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XX" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/pay_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="复核状态" />

                <TextView
                    android:id="@+id/tv_fh_fhzt"
                    style="@style/pay_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XX" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_yy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/pay_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="原因" />

                <TextView
                    android:id="@+id/tv_fh_yy"
                    style="@style/pay_info"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:ellipsize="marquee"
                    android:scrollbars="vertical"
                    android:text="XX" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_fhr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/pay_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="复核人" />

                <TextView
                    android:id="@+id/tv_fh_fhr"
                    style="@style/pay_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XX" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_fhsj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/pay_info"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="复核时间" />

                <TextView
                    android:id="@+id/tv_fh_fhsj"
                    style="@style/pay_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XX" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_fhyj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/pay_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="复核意见" />

                <TextView
                    android:id="@+id/tv_fh_fhyj"
                    style="@style/pay_info"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:ellipsize="marquee"
                    android:scrollbars="vertical"
                    android:text="XX" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>