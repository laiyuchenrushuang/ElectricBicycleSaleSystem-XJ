<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:id="@+id/ll_zplx"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:text="照片类型 :"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <RadioGroup
            android:id="@+id/rg_zplx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_cyzp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查验照片"
                android:checked="true"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp" />

            <RadioButton
                android:id="@+id/rb_djzp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登记照片"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_cxtj"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:text="查询条件 :"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <RadioGroup
            android:id="@+id/rg_cxtj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_zcbm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="整车编码"
                android:checked="true"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp" />

            <RadioButton
                android:id="@+id/rb_hphm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="号牌号码"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_zcbm"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:text="整车编码 :"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_ccc_zcbm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="@string/number_and_letter"
            android:gravity="left|center_vertical"
            android:hint="请输入整车编码"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/theme_color"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_scan"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/scan_bule_icon" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_hphm"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:text="车牌号码 :"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_hphm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="请输入车牌号码"
            android:paddingLeft="10dp"
            android:text="新"
            android:textColor="@color/black"
            android:textColorHint="@color/theme_color"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/bottom_button" />
</LinearLayout>